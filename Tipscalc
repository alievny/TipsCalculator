cost = int(input("Subtotal = "))
tip15 = 0.15
tip18 = 0.18
tip20 = 0.20
tip15 = cost * tip15
tip18 = cost * tip18
tip20 = cost * tip20
total15 = cost + tip15
total18 = cost + tip18
total20 = cost + tip20

print("--------------------")

print("Tips 15% =", tip15)
print("Total =", total15)

print("--------------------")

print("Tips 18% =", tip18)
print("Total =", total18)

print("--------------------")

print("Tips 20% =", tip20)
print("Total =", total20)

print("--------------------")
